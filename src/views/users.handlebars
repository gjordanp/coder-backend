{{>navbar user=user}}
<div class="container mt-4 mb-5">
    <form method="get" action="/api/users/delete/inactive">
        <input type="submit" class="btn btn-outline-danger mb-2" value="Eliminar Usuarios Inactivos" data-bs-toggle="tooltip" data-bs-placement="top" title="Elimina usuarios inactivos por mas de 2 días" />
    </form>
    <div class="d-flex flex-column gap-3 p-0">
        {{#each users}}
        <div class="card">
            <div class="card-body">
                {{!-- <p>Id: {{this.id}}</p> --}}
                <p>Nombre: {{this.first_name}}</p>
                <p>Apellido: {{this.last_name}}</p>
                <p>Email: {{this.email}}</p>
                <p>Edad: {{this.age}}</p>
                <p>Rol: {{this.role}}</p>
                <p>Última Conexión: {{dateUntilNow this.last_connection}}</p>
                {{#if (neq this.role "admin")}}
                <form method="get" action="/api/users/premium/{{this.id}}">
                    <input type="submit" class="btn btn-outline-primary mb-2" value="Cambiar rol" />
                </form>
                <form method="get" action="/api/users/delete/{{this.id}}">
                    <input type="submit" class="btn btn-outline-danger" value="Borrar" />
                </form>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>