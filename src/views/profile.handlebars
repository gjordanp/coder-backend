{{>navbar user=user}}
<section style="background-color: #eee; height: 100vh">
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="">User</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="{{findProfileImg user.documents}}" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{user.first_name}} {{user.last_name}}</h5>
            <p class="text-muted mb-1">Full Stack Developer</p>
            <p class="text-muted mb-4">Chile</p>
            <div class="d-flex justify-content-center mb-2">
              <button type="button" class="btn btn-primary">Follow</button>
              <button type="button" class="btn btn-outline-primary ms-1"
                onclick="window.location.href='/chat'">Message</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Nombre</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.first_name}} </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Apellido</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.last_name}} </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}} </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Edad</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.age}} </p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Rol</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.role}} </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Enlaces</p>
              </div>
              <div class="col-sm-9">
                <button type="button" class="btn btn-outline-primary btn-sm mb-1"
                  onclick="window.location.href='/api/products/'">Productos</button>
                <button type="button" class="btn btn-outline-primary btn-sm mb-1"
                  onclick="window.location.href='/api/carts/{{user.cart.id_cart}}'">Carrito</button>
              </div>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col">
                <form method="post" action="/api/users/{{user._id}}/documents" enctype="multipart/form-data">
                  <div class="row align-items-center">
                    <div class="col-3">
                      <p class="mb-0">Imagen de perfil</p>
                    </div>
                    <div class="col-7">
                      <input type="text" name="filetype" value="profileImg" class="d-none">
                      <input type="file" name="file" class="form-control">
                    </div>
                    <div class="col-2">
                      <input type="submit" value="Cargar" class="btn btn-primary">
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <hr>
            <div class="row my-3">
              <div class="col">
                <form method="post" action="/api/users/{{user._id}}/documents" enctype="multipart/form-data">
                  <div class="row align-items-center">
                    <div class="col-3">
                      <p class="mb-0">Documento de identificacion</p>
                    </div>
                    <div class="col-7">
                      <input type="text" name="filetype" value="idDoc" class="d-none">
                      <input type="file" name="file" class="form-control">
                    </div>
                    <div class="col-2">
                      <input type="submit" value="Cargar" class="btn btn-primary">
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <hr>
            <div class="row my-3">
              <div class="col">
                <form method="post" action="/api/users/{{user._id}}/documents" enctype="multipart/form-data">
                  <div class="row">
                    <div class="col-3">
                      <p class="mb-0">Comprobante de domicilio</p>
                    </div>
                    <div class="col-7">
                      <input type="text" name="filetype" value="addressDoc" class="d-none">
                      <input type="file" name="file" class="form-control">
                    </div>
                    <div class="col-2">
                      <input type="submit" value="Cargar" class="btn btn-primary">
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <hr>
            <div class="row mt-3">
              <div class="col">
                <form method="post" action="/api/users/{{user._id}}/documents" enctype="multipart/form-data">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Comprobante de estado de cuenta</p>
                    </div>
                    <div class="col-sm-7">
                      <input type="text" name="filetype" value="accountDoc" class="d-none">
                      <input type="file" name="file" class="form-control">
                    </div>
                    <div class="col-sm-2">
                      <input type="submit" value="Cargar" class="btn btn-primary">
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>